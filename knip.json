{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "ignoreExportsUsedInFile": true,
  "workspaces": {
    ".": {
      "entry": ["src/index.ts", "src/cli/main.ts"],
      "project": ["src/**/*.ts"],
      "ignore": ["**/*.spec.ts", "**/*.test.ts"]
    },
    "e2e-tests/*": {
      "entry": ["main.ts"]
    }
  },
  "eslint": {
    "config": ["eslint.config.js"]
  },
  "typescript": {
    "config": ["tsconfig.json"]
  }
}
