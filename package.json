{
  "name": "tfts",
  "version": "0.1.1",
  "description": "TypeScript-first infrastructure as code for Terraform",
  "type": "module",
  "bin": {
    "tfts": "./dist/bin/tfts.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "keywords": [
    "terraform",
    "infrastructure",
    "iac",
    "cdktf",
    "typescript"
  ],
  "author": "PND",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/swen128/terraform-ts"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "knip": "knip",
    "test": "bun test",
    "check": "bun format && bun typecheck && bun test && bun lint && bun knip",
    "prepublishOnly": "bun run build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@eslint/js": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "bun-types": "^1.2.20",
    "eslint": "^9.32.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-unicorn": "^60.0.0",
    "husky": "^9.1.7",
    "knip": "^5.62.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "neverthrow": "^8.2.0",
    "zod": "^4.3.4"
  }
}
